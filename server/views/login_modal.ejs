<!-- LOGIN MODAL -->
<div class="modal fade login-modal" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-sm" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Login</h4>
			</div>
			<div class="modal-body">
				<form>
					<div class="form-group has-feedback" id="form-username-login">
						<label class="control-label" for="nusername">Username</label>
						<input type="text" class="form-control" id="username" placeholder="Username">
					</div>
					<div class="form-group has-feedback" id="form-password-login">
						<label class="control-label" for="password">Password</label>
						<input type="password" class="form-control" id="password" placeholder="Password">
						<span id="err-user" class="help-block hidden">Username or password is incorrect.</span>	
						<span id="err-missing" class="help-block hidden">Username or password missing.</span>
					</div>	

				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" id="btn-login">Log in</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

