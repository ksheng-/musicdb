<!DOCTYPE html>
<html>
	<head>
	<% include head.ejs %>
	</head>

	<body>
		<div class="container-fluid">
			<!-- LOGO -->
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<h1 class="text-center"><%= title %></h1>
				</div>
			</div>
			<!-- SEARCHBAR -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="input-group">
						<input type="text" class="form-control" id="search" placeholder="Search" aria-label="..." name="query">
						<div class="input-group-btn">
							<button type="button" class="btn btn-default" id="btn-search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
							<button type="button" class="btn btn-default dropdown-toggle" id="category-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Artists
								<!-- <span class="caret"></span> -->
								<!-- <span class="sr-only">Toggle Dropdown</span> -->
							</button>
							<ul class="dropdown-menu">
								<li class="dropdown-header">Category</li>
								<li class="category"><a href="#">Artists</a></li>
								<li class="category"><a href="#">Albums</a></li>
								<li class="category"><a href="#">Tracks</a></li>
								<!-- <li role="separator" class="divider"></li> -->
								<li	class="category"><a href="#">Tags</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<!-- LOGIN OR REGISTER-->
			<div class="row">
				<!-- BUTTONS -->
				<div class="col-md-2 col-md-offset-5">
					<div class="text-center login-text hidden">
						<a href="#" data-toggle="modal" data-target=".login-modal">login</a> / 
						<a href="#" data-toggle="modal" data-target=".signup-modal">signup</a>
					</div>
					<div class="text-center logout-text hidden">
						currently signed in as <a href="#" id="current-user"></a> /  
						<a href="#" id="logout">logout</a>
					</div>
				</div>

				<!-- MODALS -->
				<% include login_modal.ejs %>
				<% include signup_modal.ejs %>
			</div>
		</div>
		</body>

		<% include scripts.ejs %>

		</html>
